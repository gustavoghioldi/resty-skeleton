{
    "name": "restyphp/resty-skeleton",
    "description": "A Resty Framework skeleton application",
    "version": "0.5.2",
    "keywords": ["skeleton", "framework", "microframework", "rest", "resty"],
    "homepage": "https://github.com/restyphp/resty-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com",
            "homepage": "http://www.mostofreddy.com.ar",
            "role": "Lead"
        }
    ],
    "require": {
        "php": ">=7.0",
        "restyphp/resty": "0.5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*",
        "squizlabs/php_codesniffer": "2.7.*"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "ln -sf vendor/bin/resty"
        ],
        "post-install-cmd": [
            "ln -sf vendor/bin/resty"
        ],
        "post-update-cmd": [
            "ln -sf vendor/bin/resty"
        ]
    }
}
